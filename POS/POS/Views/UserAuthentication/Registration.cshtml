@model POS.Models.DTO.Registration;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <style>
        /* Updated CSS for a more stylish login page */

        /* Form container */
        form {
            border: 2px solid #ddd;
            width: 400px;
            margin: auto;
            margin-top: 10%;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Input fields */
        input[type=text],
        input[type=password] {
            width: calc(100% - 24px);
            padding: 12px;
            margin: 10px auto;
            display: block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Button */
        button {
            background-color: black;
            color: white;
            padding: 14px 20px;
            margin: 10px auto;
            border: none;
            cursor: pointer;
            width: calc(100% - 24px);
            border-radius: 4px;
            display: block;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: white;
                color: black;
            }

        /* Container */
        .container {
            padding: 20px;
        }

        /* Error message */
        .error {
            color: darkred;
            margin-top: 5px;
        }

    </style>
</head>
<body>

    <form asp-action="Registration" method="post">
        <div class="container">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" />
            <div class="message">
                <span class="error" asp-validation-for="Email"></span>
            </div>

            <label asp-for="Username">Username</label>
            <input type="text" asp-for="Username" />
            <div class="message">
                <span class="error" asp-validation-for="Username"></span>
            </div>

            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" />
            <div class="message">
                <span class="error" asp-validation-for="Password"></span>
            </div>

            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input type="password" asp-for="ConfirmPassword" />
            <div class="message">
                <span class="error" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

        @if (TempData["message"] != null)
        {
            <div class="message">
                <span class="error">@TempData["message"]</span>
            </div>
        }

        <button type="submit">Register</button>
    </form>

</body>
</html>
