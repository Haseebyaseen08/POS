
<link rel="stylesheet" type="text/css" href="~/css/site.css" media="print">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .receipt {
            width: 80mm;
            margin: 0 auto;
            font-size: 12px;
        }

            .receipt th, .receipt td {
                padding: 3px 5px;
                text-align: left;
            }

            .receipt tfoot td {
                font-weight: bold;
            }

            .receipt td:nth-child(3),
            .receipt td:nth-child(4),
            .receipt td:nth-child(5) {
                text-align: right;
            }

        .center {
            text-align: center;
        }

    .company-name {
        font-weight: bold;
        font-size: 16px;
        text-align: center;
        margin-bottom: 10px;
    }

    .thank-you-message {
        text-align: center;
        margin-top: 20px;
    }

    .delivery-number {
        text-align: center;
        margin-top: 10px;
        font-style: italic;
    }
    </style>

<div class="company-name">
    WRAP IT
</div>

    <table class="receipt">
        <thead>
            <tr>
                <th colspan="3" class="center">Item</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Products.Count; i++)
            {
                var item = Model.Products[i];
                <tr>
                    <td colspan="3">@item.Name</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.UnitPrice * item.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" style="border-top: 1px dashed #000;">&nbsp;</td>
            </tr>
            <tr>
                <td colspan="4" style="text-align: right;">Total:</td>
                <td>@Model.Bill</td>
            </tr>
        </tfoot>
    </table>

<div class="order-number">
    Order Number: @Model.OrderId <!-- Replace INSERT_ORDER_NUMBER_HERE with actual order number -->
</div>
<br />
<div class="delivery-number">
    Enjoy your meal. Our order delivery number is: 030 707 355 56
</div>

<div class="thank-you-message">
    Thanks for choosing us!
</div>
